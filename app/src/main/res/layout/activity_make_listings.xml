<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="733dp"
        android:layout_above="@id/navbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-67dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="-2dp">


        <ImageView
            android:id="@+id/listPic"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            app:srcCompat="@drawable/default_image" />

        <TextView
            android:id="@+id/listNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listPic"
            android:layout_marginTop="9dp"
            android:text="Post Title"
            android:textSize="15sp"
            android:textStyle="bold|italic" />


        <EditText
            android:id="@+id/listName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listNameText"
            android:layout_marginTop="0dp"
            android:hint="Post Title"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/priceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listPic"
            android:layout_marginStart="168dp"
            android:layout_marginLeft="168dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@+id/listNameText"
            android:layout_toRightOf="@+id/listNameText"
            android:text="Price (Per Month)"
            android:textSize="15sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/priceText"
            android:layout_alignStart="@+id/priceText"
            android:layout_alignLeft="@+id/priceText"
            android:layout_marginStart="-1dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="0dp"
            android:hint="Price"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cityText"
            android:hint="City"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/cityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:layout_marginTop="10sp"
            android:text="City"
            android:textSize="15sp"
            android:textStyle="bold|italic" />


        <TextView
            android:id="@+id/stateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/cityText"
            android:text="State"
            android:textSize="15sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/stateText"
            android:layout_alignEnd="@+id/stateText"
            android:layout_alignRight="@+id/stateText"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="-20dp"
            android:layout_marginRight="-20dp"
            android:hint="State"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city"
            android:layout_marginTop="14dp"
            android:text="Contact Phone Number"
            android:textSize="15sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/phoneNumberEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneNumber"
            android:layout_marginTop="8dp"
            android:hint="Phone Number"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/emailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/state"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="53dp"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="77dp"
            android:layout_marginRight="77dp"
            android:layout_toEndOf="@+id/phoneNumber"
            android:layout_toRightOf="@+id/phoneNumber"
            android:text="Contact Email"
            android:textSize="15sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailText"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="27dp"
            android:layout_marginRight="27dp"
            android:layout_toEndOf="@+id/phoneNumberEdit"
            android:layout_toRightOf="@+id/phoneNumberEdit"
            android:hint="Email"
            android:textSize="20sp" />

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/city"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="138dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="make listing" />


    </RelativeLayout>

    <include
        layout="@layout/item_bottom_navigation"
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>