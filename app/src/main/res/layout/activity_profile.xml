<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient"
        android:paddingBottom="15dp">

        <RelativeLayout
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profPic"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/blankuser"
                app:civ_border_color="#00000000"
                app:civ_border_width="2dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/profName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25sp"
            android:text="User Name"
            android:textColor="#ffffff"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/topLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp"
            android:textColor="#5b39c6"
            android:textSize="16sp" />
        />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/userInfo"
        android:layout_below="@id/relTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginRight="20sp">


        <TextView
            android:id="@+id/EmailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Email"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp">
        </TextView>

        <TextView
            android:id="@+id/UserEmail"
            android:layout_below="@id/EmailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="20sp"
            android:text="bob1@gmail.com"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp">
        </TextView>

        <TextView
            android:id="@+id/PhoneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UserEmail"
            android:layout_gravity="left"
            android:text="Phone"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp">
        </TextView>

        <TextView
            android:id="@+id/UserPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PhoneText"
            android:textSize="20sp"
            android:text="123123123"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp">
        </TextView>

        <ImageView
            android:id="@+id/editPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/PhoneText"
            android:src="@drawable/ic_edit_black_24dp"
            android:layout_alignParentRight="true">
        </ImageView>

        <TextView
            android:id="@+id/LocationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/UserPhone"
            android:text="Location"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp">
        </TextView>

        <TextView
            android:id="@+id/UserLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/LocationText"
            android:textSize="20sp"
            android:text="San Francisco"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp">
        </TextView>

        <ImageView
            android:id="@+id/editLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/LocationText"
            android:src="@drawable/ic_edit_black_24dp"
            android:layout_alignParentRight="true">
        </ImageView>

        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="25sp"
            android:layout_marginBottom="30sp"
            android:layout_below="@id/UserLocation"
            android:gravity="center"
            android:text="Sign out" />





    </RelativeLayout>
    <include
        layout="@layout/item_bottom_navigation"
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/userInfo"/>

</RelativeLayout>